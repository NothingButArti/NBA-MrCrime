{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "outDir": "../dist/client",
        "rootDir": "../",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "baseUrl": "../",
        "paths": {
            "@shared/*": ["shared/*"]
        }
    },
    "include": [
        "**/*.ts",
        "../shared/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
